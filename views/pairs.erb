<style>
button {
    background-color: transparent;
    border-radius: 10px;
    color: black;
    text-align: center;
    text-decoration: none;
}
span {
font-size:30px;
font-family:Impact, Charcoal, sans-serif
}
body {
width: 100vw;
height: 100vh;
background: #ff5100
}
.blinking{
    animation:blinkingText 5s infinite;
}
@keyframes blinkingText{
    0%{     color: blue;           }
    25%{    color: yellow;        }
    50%{   color: red;          }
    75%{    color: yellow;        }
    100%{     color: blue;           }
}
li {
list-style-type: circle;
}
</style>
<center><span class="blinking">
<%pairednames.each do |v| %>
    <li>
    <%v.each do |v|%>
        <%=v.concat(", ")%>
    <%end%><br><br>
</li>
<%end%>
</span>
</center>
